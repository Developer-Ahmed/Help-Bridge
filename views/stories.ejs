    <link rel="stylesheet" href="css/dashboard.css">
    <link rel="stylesheet" href="css/footer/footer.css">
</head>
<body>
    <% if(locals.user) { %>
        <%- include("dashboard.ejs") %>
    <% } %>

    <nav class="navbar">
        <h2>Hopeful Steps</h2>
        <div class="text-menu">
          <a href="/" class="home">Home</a>
          <a href="/stories" class="stories-link">Stories</a>
          <a href="/about" class="about-us">About Us</a>
          <a class="help-link">Help Now</a>
        </div>
      </nav>
      
      <div class="section1">
        <h2 class="top-story">Top Story</h2>
        <div class="content">
          <img src="https://images.unsplash.com/photo-1589177900075-9d13b4451617?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYzODEzMDI0MA&ixlib=rb-1.2.1&q=85" class="section1-img">
          <div class="text">
            <h3 class="section1-title"><a href="/stories/<%= topStories[0].id %>"><%= topStories[0].title %></a></h3>
            <p class="description"><%= topStories[0].description %></p>
            <p class="time"><%= topStories[0].createdAt.toLocaleDateString() %></p>
          </div>
        </div>
      </div>
      
      <div class="section2">
        <!-- right and left arrows -->
        <div class="arrows">
          <button class="right-arrow">
            <!-- right arrow -->
            &#10095;
          </button>
          <!-- left arrow -->
          
          <button class="left-arrow">
            &#10094;
          </button>
          
        </div>
        <!-- part one -->
        <div class="part1">
          <!-- News 1 -->
          <div class="s2-news1">
            <!-- content div -->
            <div class="news1-content">
              <h3 class="news1-title"><a href="/stories/<%= topStories[1].id %>"><%= topStories[1].title %></a></h3>
              <p class="news1-description"><%= topStories[1].description %></p>
              <p class="news1-time"><%= topStories[1].createdAt.toLocaleDateString() %></p>
            </div>
          </div>
          
          <!-- News 2 -->
          <div class="s2-news2">
            <!-- content div -->
            <div class="news2-content">
              <h3 class="news2-title"><a href="/stories/<%= topStories[1].id %>"><%= topStories[2].title %></a></h3>
              <p class="news2-description"><%= topStories[2].description %></p>
              <p class="news2-time"><%= topStories[2].createdAt.toLocaleDateString() %></p>
            </div>
          </div>
          
          <!-- News 3 -->
          <div class="s2-news3">
            <!-- content div -->
            <div class="news3-content">
              <h3 class="news3-title"><a href="/stories/<%= topStories[3].id %>"><%= topStories[3].title %></a></h3>
              <p class="news3-description"><%= topStories[3].description %></p>
              <p class="news3-time"><%= topStories[3].createdAt.toLocaleDateString() %></p>
            </div>
          </div>
          
          <!-- News 4 -->
          <div class="s2-news4">
            <!-- content div -->
            <div class="news4-content">
              <h3 class="news4-title"><a href="/stories/<%= topStories[4].id %>"><%= topStories[4].title %></a></h3>
              <p class="news4-description"><%= topStories[4].description %></p>
              <p class="news4-time"><%= topStories[4].createdAt.toLocaleDateString() %></p>
            </div>
          </div>
          
        </div>
      </div>
      
      <!-- section 3 recent stories -->
      <div class="section3">
        <!-- most recent 3 -->
        <div class="s3-most-recent3">
          <!-- most recent -->
          <div class="most-recent">
            <!-- most recent content div -->
            <div class="most-recent-content">
              <h3 class="mr-title"><a href="/stories/<%= recentStories[0].id %>"><%= recentStories[0].title %></a></h3>
              <p class="mr-description"><%= recentStories[0].description %></p>
              <p class="mr-time"><%= recentStories[0].createdAt.toLocaleDateString() %></p>
            </div>
            
          </div>
          
          <div class="mr2-3-div">
            <!-- most recent 2 -->
            <div class="most-recent2">
              <div class="mr2-content">
                <h3 class="mr2-title"><a href="/stories/<%= recentStories[1].id %>"><%= recentStories[1].title %></a></h3>
                <!-- <p class="mr2-description">A sentence for an example Description. This is an example sentence.</p> -->
                <p class="mr2-time"><%= recentStories[1].createdAt.toLocaleDateString() %></p>
              </div>
             </div>
            <!-- most recent 3 -->
            <div class="most-recent3">
              <div class="mr3-content">
                <h3 class="mr3-title"><a href="/stories/<%= recentStories[2].id %>"><%= recentStories[2].title %></a></h3>
