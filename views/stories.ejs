                <h2 class="card5-title"><a href="/stories/<%= recentStories[7].id %>"><%= recentStories[7].title %></a></h2>
                <p class="card5-description"><%= recentStories[7].description %></p>
                <p class="card5-time">
                  <%= recentStories[7].createdAt.toLocaleDateString() %>
                </p>
              </div>
            </div>
            <!-- card6 -->
            <div class="rs-card6">
              <!-- card 6 content -->
              <div class="card6-content">
                <img src="https://images.unsplash.com/photo-1495602787267-96ab76127c2a?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYzOTI3NDAxNg&ixlib=rb-1.2.1&q=85" class="card6-img">
                <h2 class="card6-title"><a href="/stories/<%= recentStories[8].id %>"><%= recentStories[8].title %></a></h2>
                  <p class="card6-description"><%= recentStories[8].description %></p>
                  <p class="card6-time">
                    <%= recentStories[8].createdAt.toLocaleDateString() %>
                  </p>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      
      <div class="section4">
        <h1 class="see-more">
          SEE MORE...
        </h1>
        <div class="section4-navigation">
          <a href="#">Top Stories</a>
          <a href="#" class="nav-most-touching">Most Touching Stories</a>
          <a href="#" class="nav-recent-stories">Recent Stories</a>
        </div>
      </div>

      <%- include("./footer/footer.ejs"); %>

      <script src="js/stories.js"></script>
</body>
</html>