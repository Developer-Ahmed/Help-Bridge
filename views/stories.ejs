                <h2 class="card1-title"><a href="/stories/<%= recentStories[3].id %>"><%= recentStories[3].title %></a></h2>
                 <p class="card1-description"><%= recentStories[3].description %></p>
                 <p class="card1-time">
                  <%= recentStories[3].createdAt.toLocaleDateString() %>
                  </p>
              </div>
            </div>
            <!-- card2 -->
            <div class="rs-card2">
              <!-- card 2 content -->
              <div class="card2-content">
                <img src="https://images.unsplash.com/photo-1495602787267-96ab76127c2a?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYzOTI3NDAxNg&ixlib=rb-1.2.1&q=85" class="card2-img">
